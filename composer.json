{
    "name": "bcgov-plugin/bcgov-plugin-cleanbc",
    "description": "Frontend plugin to augment Clean BC and Go Electric BC using Block Theme for BC Gov",
    "version": "1.4.0",
    "type": "wordpress-plugin",
    "license": "Apache-2.0",
    "repositories": [
        {
            "type": "composer",
            "url": "https://apps.itsm.gov.bc.ca/satis"
        }
    ],
    "require": {
		"composer/installers": "^1.0"
	},
	"require-dev": {
        "bcgov/wordpress-common": "@dev",
        "bcgov/wordpress-scripts": "2.*",
        "phpunit/phpunit": "^9.6",
		"yoast/phpunit-polyfills": "^2.0"
	},
	"scripts": {
        "setup": [
            "npm ci",
            "@build"
        ],
        "build" : [
            "npm run build"
        ],
        "production" : [
            "npm run build:production",
            "@test-wp",
            "@checklist"
        ],
        "checklist" : [
            "Bcgov\\Script\\Checklists::postProductionChecks"
        ],
        "phpcs": [
            "Bcgov\\Script\\Standards::phpcs"
        ],
        "phpcbf": [
            "Bcgov\\Script\\Standards::phpcbf"
        ],
		"setup-tests": [
			"bin/install-wp-tests.sh wordpress_test root '' localhost latest"
		],
        "test": [
            "Bcgov\\Script\\Tests::phpunit"
        ],
        "test-wp": [
            "vendor/bin/phpunit --configuration phpunit.xml.dist"
        ],
        "coverage": [
            "vendor/bin/phpunit --coverage-html ./coverage/php/"
        ]
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
