{
  "name": "bcgov-plugin-cleanbc",
  "author": "Nate King",
  "private": true,
  "version": "1.2.4",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run lint:js : LINT_SEVERITY=warn && vite build --minify false",
    "build:watch": "vite build --watch",
    "build:watch-no-minify": "vite build --watch --minify false",
    "build:production": "npm ci && npm run lint:js && vite build",
    "lint:css": "wp-scripts lint-style 'src/**/*.scss' 'styles/public-additional-styles.scss' --allow-empty-input",
		"fix:css": "wp-scripts lint-style 'src/**/*.scss' 'styles/public-additional-styles.scss' --fix",
		"lint:js": "wp-scripts lint-js scripts --no-error-on-unmatched-pattern",
		"fix:js": "wp-scripts lint-js scripts --fix",
    "preview": "vite preview",
    "test": "vitest"
  },
  "dependencies": {
    "vue": "^3.3.2",
    "vue-slider-component": "^4.1.0-beta.7"
  },
  "devDependencies": {
    "@bcgov/wordpress-eslint": "git+https://apps.itsm.gov.bc.ca/bitbucket/scm/wp/bcgov-wordpress-eslint.git#semver:1.x",
    "@bcgov/wordpress-stylelintrc": "git+https://apps.itsm.gov.bc.ca/bitbucket/scm/wp/bcgov-wordpress-stylelintrc.git#semver:1.x",
    "@wordpress/scripts": "^26.19.0",
    "@rushstack/eslint-patch": "^1.2.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/eslint-config-prettier": "^7.1.0",
    "eslint": "^8.39.0",
    "eslint-plugin-vue": "^9.11.0",
    "jsdom": "^21.1.0",
    "prettier": "^2.8.8",
    "sass": "^1.58.3",
    "terser": "^5.18.2",
    "vite": "^4.3.5",
    "vitest": "^0.29.2"
  }
}
